    <script>
        // --- START: CONFIGURATION ---
        const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbwmvqlJa_fLfAK5L8VjvnWxIEtsh4gnW4talymOhd8P7WWhUcUrlWMSqmzHBDjYqpi_hg/exec'; 
        // --- END: CONFIGURATION ---

        const searchForm = document.getElementById('searchForm');
        const studentIdInput = document.getElementById('studentId');

        /**
         * Returns styled HTML for a given status.
         * @param {string} status The status text (e.g., 'อนุมัติ', 'รออนุมัติ', 'ไม่อนุมัติ').
         * @returns {string} HTML string with color-coded status.
         */
        function getStatusHtml(status) {
            if (!status) return '<span>-</span>';
            const s = status.trim();
            if (s === 'อนุมัติ') {
                return `<span class="font-bold text-green-600">${s}</span>`;
            } else if (s === 'รออนุมัติ') {
                return `<span class="font-bold text-yellow-600">${s}</span>`;
            } else if (s === 'ไม่อนุมัติ') {
                return `<span class="font-bold text-red-600">${s}</span>`;
            }
            return `<span>${s}</span>`; // Fallback
        }

        /**
         * Determines the note text based on approval statuses.
         * @param {string} registrarStatus Status from the registrar.
         * @param {string} directorStatus Status from the director.
         * @returns {string} The appropriate note text.
         */
        function getNoteText(registrarStatus, directorStatus) {
            const regStatus = registrarStatus ? registrarStatus.trim() : '';
            const dirStatus = directorStatus ? directorStatus.trim() : '';

            if (regStatus === 'อนุมัติ' && dirStatus === 'อนุมัติ') {
                return 'นักเรียนสามารถมารับเอกสารได้ที่ห้องวิชาการ อาคาร 5 ชั้น 2 ห้อง 523';
            } else {
                return 'ยังไม่สามารถมารับเอกสารได้ ต้องรอการอนุมัติจากผู้อำนวยการโรงเรียน';
            }
        }

        searchForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            const studentId = studentIdInput.value.trim();
            if (!studentId) {
                Swal.fire({ icon: 'warning', title: 'กรุณากรอกข้อมูล', text: 'โปรดป้อนเลขประจำตัวนักเรียนก่อนค้นหา', confirmButtonText: 'ตกลง' });
                return;
            }

            if (!SCRIPT_URL) {
                Swal.fire({ icon: 'error', title: 'การตั้งค่าไม่สมบูรณ์', html: 'กรุณาตั้งค่า <b>SCRIPT_URL</b> ในไฟล์โค้ด<br>ดูคำอธิบายการเชื่อมต่อสำหรับรายละเอียด', confirmButtonText: 'ตกลง' });
                return;
            }

            Swal.fire({ title: 'กำลังค้นหาข้อมูล...', text: 'กรุณารอสักครู่', allowOutsideClick: false, didOpen: () => Swal.showLoading() });

            try {
                const response = await fetch(`${SCRIPT_URL}?id=${studentId}`);
                const result = await response.json();

                if (result.status === 'success') {
                    const data = result.data;
                    const noteText = getNoteText(data.registrarStatus, data.directorStatus);
                    
                    Swal.fire({
                        icon: 'success',
                        title: 'พบข้อมูลคำร้อง',
                        html: `
                            <div class="text-left p-4 space-y-2">
                                <p><strong>วันที่ขอคำร้อง:</strong> ${data.date}</p>
                                <p><strong>ชื่อ - นามสกุล:</strong> ${data.name}</p>
                                <p><strong>ชั้น:</strong> ${data.class}</p>
                                <p><strong>ประเภทคำร้อง:</strong> ${data.type}</p>
                                <hr>
                                <p><strong>สถานะ (นายทะเบียน):</strong> ${getStatusHtml(data.registrarStatus)}</p>
                                <p><strong>สถานะ (ผู้อำนวยการ):</strong> ${getStatusHtml(data.directorStatus)}</p>
                                <hr>
                                <p><strong>หมายเหตุ:</strong> <span class="font-semibold">${noteText}</span></p>
                            </div>
                        `,
                        confirmButtonText: 'ปิด',
                        showDenyButton: true,
                        denyButtonText: `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block mr-1" viewBox="0 0 20 20" fill="currentColor"><path d="M4 2a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V4a2 2 0 00-2-2H4zm6 10a.75.75 0 01-.75.75H8.75a.75.75 0 010-1.5h1.5A.75.75 0 0110 12zm-2-4a.75.75 0 01.75-.75h.5a.75.75 0 010 1.5h-.5A.75.75 0 018 8zm4 4a.75.75 0 01-.75.75h-.5a.75.75 0 010-1.5h.5a.75.75 0 01.75.75zM12 8a.75.75 0 01.75-.75h.5a.75.75 0 010 1.5h-.5A.75.75 0 0112 8z"></path></svg> ดาวน์โหลด PDF`,
                        denyButtonColor: '#3085d6',
                    }).then((popupResult) => {
                        if (popupResult.isDenied) {
                            if(data.pdfLink) {
                                window.open(data.pdfLink, '_blank');
                            } else {
                                Swal.fire('ไม่พบไฟล์', 'ไม่มีลิงก์เอกสาร PDF สำหรับคำร้องนี้', 'warning');
                            }
                        }
                    });
                } else {
                    Swal.fire({ icon: 'error', title: 'ไม่พบข้อมูล', text: `ไม่พบข้อมูลคำร้องสำหรับเลขประจำตัว ${studentId}`, confirmButtonText: 'ลองอีกครั้ง' });
                }
            } catch (error) {
                console.error('Error fetching data:', error);
                Swal.fire({ icon: 'error', title: 'เกิดข้อผิดพลาด', text: 'ไม่สามารถเชื่อมต่อกับระบบได้ กรุณาลองใหม่อีกครั้ง', confirmButtonText: 'ตกลง' });
            }
        });
    </script>

</body>
</html>
